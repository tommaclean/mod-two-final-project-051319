<h1>Search Results:</h1>

<h3>Tracks</h3>
<% if @track_results.empty? %>
  <ol>
  No tracks to show.
  </ol>
<% else %>
  <% @track_results.each do |track| %>
  <li class="song-li">
    <%= track.name %> - <%= track.artists.map{|a| a.name}.join(", ") %>
     <audio controls>
       <source src="<%= track.preview_url %>" type="audio/mpeg">
     Your browser does not support the audio element.
     </audio>

  </li>
  <% end %>
  </ol>
  <br>
<% end %>

<br>

<h3>Add A Song</h3>

<%= form_for @playlist_song, method: :post do |f| %>
<%= f.label :song_id, "" %>
<%= f.collection_select :song_id, @songs, :id, :title, class: "form-control" %> <br>
<%= f.submit "Add Song to Playlist", class: "btn btn-outline-danger"%>
<% end %>

<br>


<h3>Artists</h3>
<% if @artist_results.empty? %>
  <ol>
    No artists to show.
  </ol>
<% else %>
  <% @artist_results.each do |artist| %>
  <li><%= artist.name %></li>
  <% end %>
  </ol>
  <br>
<% end %>

<h3>Albums</h3>
<% if @album_results.empty? %>
  <ol>
  No albums to show.
  </ol>
<% else %>
<ol>
  <% @album_results.each do |album| %>
<li><%= album.name %> - <%= album.artists.first.name %></li>
<% end %>
<br>
</ol>
<% end %>

<h3>Playlists</h3>

<h6>Local Playlists</h6>
    <% if @playlist_results.empty? %>
    <ol>
      No playlists to show.
    </ol>

    <% else %>
    <ol>
    <li><%= link_to @playlist_results.first.name, @playlist_results.first %> // <i>created by: <%= link_to @playlist_results.first.author.username, @playlist_results.first.author %></i></li>
  <% end %>
  </ol>

<h6>Remote (Spotify) Playlists</h6>
  <% if @spotify_playlist_results.empty? %>
    <ol>
      No Spotify playlists to show.
    </ol>
  <% else %>
<ol>
<% @spotify_playlist_results.each do |playlist| %>
<li><%= playlist.name %> - <i>created by: <%= playlist.owner.display_name %></i></li>
<% end %>
</ol>
<br>
<% end %>

<h3>Users</h3>
<% if @users_results.empty? %>
<ol>
  No users to show.
<% else %>
<ol>
  <%= link_to @users_results.first.name, @users_results.first %> // <i>(<%= link_to @users_results.first.username, @users_results.first %>)</i>
</ol>
<% end %>
